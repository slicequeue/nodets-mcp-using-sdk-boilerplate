{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/resources/*": ["resources/*"],
      "@/tools/*": ["tools/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}